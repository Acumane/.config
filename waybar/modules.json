{
	"hyprland/workspaces" : {
		"on-click": "activate",
		"format": "{icon}",
		"format-icons": { "default": "" },
		"persistent-workspaces": { "*": 3 }
	},

	"clock#date": {
		"format": "{:%b %d,  }",
		"interval": 60,
		"tooltip-format": "<tt><small>{calendar}</small></tt>",
		"calendar": {
			"on-scroll": 1,
			"format": {
				"months":    "<span font='IBM Plex Sans Bold 12.5' color='#E6E0C2'>{}</span>",
				"days":      "<span font='IBM Plex Mono Bold' color='#BEB9A3'>{}</span>",
				"weekdays":  "<span font='IBM Plex Mono Bold' color='#F1C982'>{}</span>",
				"today":     "<span font='IBM Plex Mono Bold' color='#9bc5f8'><u>{}</u></span>"
			}
		}
	},

	"custom/weather": {
		"tooltip": false,
		"tooltip-format": "<b>{}</b>",
		"interval": 600,
		"exec": "weather.py",
		"return-type": "json"
	},

	"clock#time": {
		// "timezone": "America/New_York",
		"tooltip": false,
		"format": "{:%I:%M %p}",
		"format-alt": "{:%I:%M:%S %p}",
		"interval": 1
	},

	"bluetooth": {
        "format": "",
        "format-disabled": "",
        "format-connected": " {num_connections}",
        "tooltip-format": " {device_alias}",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": " {device_alias}"
    },

	"tray": {
		"icon-size": 15,
		"spacing": 4
	}
}
